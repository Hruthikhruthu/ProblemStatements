<body>

    <div id="counter" style="font-size: 120px;">0</div>
    <button onclick="increment()" >Click Me!</button>
    
    <script>
        let count = 0;
        function increment() {
            count++;
            document.getElementById('counter').textContent = count;
        }
    </script>

